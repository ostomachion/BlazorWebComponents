@page "/element-details"

<h1>element-details - web component using <code>&lt;template&gt;</code> and <code>&lt;slot&gt;</code></h1>

@{
    var slotAttributes = new List<AttributeDefinition>
    {
        new ("name", "the name of the slot.")
    };
}
<ElementDetails Name="slot"
                Description="A placeholder inside a web
                    component that users can fill with their own markup,
                    with the effect of composing different DOM trees
                    together."
                Attributes=slotAttributes />

<ElementDetails Name="template"
                Description="A mechanism for holding client-
                    side content that is not to be rendered when a page is
                    loaded but may subsequently be instantiated during
                    runtime using JavaScript." />
